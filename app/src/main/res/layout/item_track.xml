<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <android.support.v7.widget.CardView
        style="@style/CardStyle"
        android:id="@+id/card"
        android:layout_marginTop="8dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                app:typeface="roboto_slab_regular"
                tools:text="Bem-vindo ao Podcast Da Bel"
                />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/created_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:typeface="roboto_slab_regular"
                tools:text="15/10/2015"
                />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toLeftOf="@+id/created_at"
                android:layout_toStartOf="@id/created_at"
                android:layout_marginBottom="8dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:typeface="roboto_slab_regular"
                tools:text="12 minutos de duração"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@id/duration"
                android:orientation="horizontal"
                >

                <com.devspark.robototextview.widget.RobotoButton
                    android:id="@+id/play_track"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reproduzir"
                    app:typeface="roboto_slab_regular"
                    />


                <com.devspark.robototextview.widget.RobotoButton
                    android:id="@+id/show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mais"
                    app:typeface="roboto_slab_regular"
                    />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
